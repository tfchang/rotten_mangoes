<%= link_to "Show Movie", movie_path(@movie),  class: "new_edit" %>
<hr />

<h2>Write a review for <em><%= @movie.title %></em>.</h2>

<% if @review.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= pluralize(@review.errors.count, "error") %> prevented the review from being saved:
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@movie, @review]) do |f| %>
  <div>
    <%= f.label "text" %> <br />
    <%= f.text_area "text" %>
  </div>
  <div>
    <%= f.label "rating_out_of_ten" %> <br />
    <%= f.number_field "rating_out_of_ten" %>
  </div>
  <div> <%= f.submit "Submit" %> </div>
<% end %>
<% if @movie.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @movie do |f| %>
  <div class="input-group">
    <%= f.label "title" %><br />
    <%= f.text_field "title" %>
  </div>
  <div class="input-group">
    <%= f.label "release_date" %><br />
    <%= f.date_field "release_date" %>
  </div>
  <div class="input-group">
    <%= f.label "director" %><br />
    <%= f.text_field "director" %>
  </div>
  <div class="input-group">
    <%= f.label "runtime_in_minutes" %><br />
    <%= f.number_field "runtime_in_minutes" %>
  </div>
  <div class="input-group">
    <%= f.label :poster_image %><br />
    <%= f.file_field :poster_image %><br />
    &nbsp;&nbsp; <%= f.label :remote_poster_image_url, "or image URL:" %><br />
    &nbsp;&nbsp; <%= f.text_field :remote_poster_image_url %>
  </div>
  <div class="input-group">
    <%= f.label "description" %><br />
    <%= f.text_area "description" %>
  </div>
  <div class="input-group">
    <%= f.submit "Submit" %>
  </div>
<% end %>
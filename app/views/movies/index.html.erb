<h1>Rotten Mangoes</h1>
<br />
<%= link_to "Enter a new movie!", new_movie_path %>
<hr>

<%= form_tag(movies_path, method: "get") do %>
  <h3>Search Movies</h3>
  <%= label_tag(:q_title, "By Title:") %>
  <%= text_field_tag(:q_title) %>
  <br />
  <%= label_tag(:q_director, "By Director:") %>
  <%= text_field_tag(:q_director) %>
  <br />
  
  <%= submit_tag("Search") %>
<% end %>
<hr>

<%= paginate @movies %>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster_image_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= format_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>
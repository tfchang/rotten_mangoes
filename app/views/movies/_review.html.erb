<h3>
  Reviews
</h3>
<% if current_user %>
  <h4>
    Average Rating: <%= @movie.review_average %> 
  </h4>
  <% @movie.reviews.each do |review| %>
    <p> <%= review.text %> </p>
    <p> <%= review.rating_out_of_ten %>/10 </p>
    <small> 
      by: <%= link_to review.user.full_name, user_path(review.user) %> 
    </small>
    <hr />
  <% end %>
  <hr />
  <%= link_to "Write your review!", new_movie_review_path(@movie), class: "new_edit" %>
<% else %>
  <p class="ask_login">
    <%= link_to "Log in", new_session_path %> to see reviews and add your own.
  </p>
<% end %>